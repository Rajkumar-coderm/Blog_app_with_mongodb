            <div class="like-dislike">
            
                <a href="/like"><img class="image-again img-heart-1" src="./images/like (1).png " alt="" srcset=""></a>
            
                <a href="/dislike"><img class="image-again img-heart" src="./images/broken-heart.png" alt="" srcset=""></a>
            </div>
        </div>
        <%}%>

    </div>
